<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>
<p>
  Stations on the route:
</p>
<p>
  <% if @route.railway_stations.empty? %>
    No station
  <% else %>
    <ul>
      <% @route.railway_stations.ordered.each do |station| %>
        <li><%= station.title %></li>
      <% end %>  
    </ul>
  <% end %>
</p>


