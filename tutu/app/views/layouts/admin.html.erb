<!DOCTYPE html>
<html>
  <head>
    <title>Tutu administrator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <p id="notice" class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if user_signed_in? %>
    <%= link_to "Exit", destroy_user_session_path, method: :delete %>
    <p> Account: <%= current_user.email %></p>
  <% else %>
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>    


  <%= yield %>
  <p>
    (с) 2016 Liliya Ilyina <%= link_to 'Study project', 'http://thinknetica.com' %>
  </p>  
  </body>
</html>
